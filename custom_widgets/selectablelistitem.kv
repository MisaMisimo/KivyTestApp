#:kivy 2.1.0
#: import TransactionFormWidget custom_widgets.TransactionFormWidget
<EditTransactionPopup>:
   orientation: "vertical"
   spacing: "12dp"
   height: self.minimum_height
   TransactionFormWidget:
      orientation: "vertical"
      id: transaction_form
   MDBoxLayout:
      orientation: "horizontal"
      padding: "20dp"
      spacing: "12dp"
      MDIconButton:
         icon: "delete"
         on_press: 
            root.delete_current_row()
            app.update_list_screen()
            self.parent.parent.parent.parent.parent.dismiss()
      Widget:
      MDRectangleFlatButton:
         text: "CANCEL"
         on_press: self.parent.parent.parent.parent.parent.dismiss()
      MDRaisedButton:
         text: "ACCEPT"
         on_press: 
            root.accept_transaction_changes()
            app.update_list_screen()
            self.parent.parent.parent.parent.parent.dismiss()
