#:kivy 2.1.0
<EditTransactionDialog>:
   orientation: "vertical"
   spacing: "12dp"
   size_hint_y: None
   height: "120dp"

   MDTextField:
      hint_text: "Amount"
   MDAnchorLayout:
      anchor_x: 'center'
      anchor_y: 'center'
      # md_bg_color: "green"
      MDSegmentedControl:
         id: currency_field
         current_active_element: mxn_segment
         # segment_panel_width:"200dp"
         pos_hint: {"center_x": .5, "center_y": .5}
         MDSegmentedControlItem:
            id: mxn_segment
            text: "MXN"
         MDSegmentedControlItem:
            id: usd_segment
            text: "USD"
   MDTextField:
      hint_text: "Description"