#:kivy 2.1.0
<ViewRecordScreen>:
   name: "ViewRecordMenu"
   MDBoxLayout:
      oreintation: "vertical"

      MDBoxLayout:
         padding: [20,20,20,20]
         adaptive_size: True
         MDLabel:
            text: "Expenses"
            adaptive_size: True


      ScrollView:
         MDSelectionList:
            id: selection_list
            spacing: "12dp"
            on_parent: root.load_selection_list()
            on_selected: root.on_selected_args(*args)
            on_unselected: root.on_unselected(*args)
            on_selected_mode: root.set_selection_mode(*args)


   MDLabel:
      text: 'View Record'
      halign: 'center'

<ExpenseListItem>:
   text: "Amount goes here"
   secondary_text: "Description and Tags"
   IconLeftWidget:
      icon: "minus-thick"

<IncomeListItem>:
   text: "Amount goes here"
   secondary_text: "Description and Tags"
   IconLeftWidget:
      icon: "plus-thick"