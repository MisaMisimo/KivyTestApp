#:kivy 2.1.0
<ViewRecordScreen>:
   name: "ViewRecordMenu"
   MDBoxLayout:
      orientation: "vertical"
      padding: "20dp"
      MDLabel:
         text: "Expenses"
         halign: "left"
         adaptive_size: True

      ScrollView:
         MDSelectionList:
            id: selection_list
            spacing: "12dp"
            on_parent: root.load_selection_list()
            on_selected: root.on_selected(*args)
            on_unselected: root.on_unselected(*args)
            on_selected_mode: root.set_selection_mode(*args)

<ExpenseListItem>:
   text: "Amount goes here"
   secondary_text: "Description and Tags"
   IconLeftWidget:
      icon: "minus-thick"

<IncomeListItem>:
   text: "Amount goes here"
   secondary_text: "Description and Tags"
   IconLeftWidget:
      icon: "plus-thick"