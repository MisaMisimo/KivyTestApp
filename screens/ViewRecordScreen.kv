#:kivy 2.1.0
<ViewRecordScreen>:
   name: "ViewRecordMenu"
   MDBoxLayout:
      orientation: "vertical"
      padding: "20dp"
      MDLabel:
         text: "Expenses"
         halign: "left"
         adaptive_size: True
      ViewRecordRecycleView:
         id: selection_list

         
<ExpenseListItem>:
   text: "Amount goes here"
   secondary_text: "Description and Tags"
   default_size: None, dp(56)
   IconLeftWidget:
      icon: "minus-thick"

<IncomeListItem>:
   text: "Amount goes here"
   secondary_text: "Description and Tags"
   IconLeftWidget:
      icon: "plus-thick"

<ViewRecordRecycleView>:
   viewclass: 'ExpenseListItem'  # defines the viewtype for the data items.
   orientation: "vertical"
   spacing: 40
   padding:20, 20
   space_x: self.size[0]/3

   RecycleBoxLayout:
      color:(0, 0.7, 0.4, 0.8)
      default_size: None, dp(56)

      # defines the size of the widget in reference to width and height
      default_size_hint: 1.0, None 
      size_hint_y: None
      height: self.minimum_height
      orientation: 'vertical' # defines the orientation of data items
