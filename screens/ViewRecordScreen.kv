#:kivy 2.1.0
#: import SelectableListItem custom_widgets.selectablelistitem
<ViewRecordScreen>:
   name: "ViewRecordMenu"
   MDBoxLayout:
      orientation: "vertical"
      padding: "20dp"
      MDLabel:
         text: "Expenses"
         halign: "center"
         adaptive_height: True
      MDBoxLayout:
         orientation: "horizontal"
         adaptive_height: True
         spacing: 10
         MDIconButton:
            icon: "menu-left"
            md_bg_color: [0.1,0.1,0.1,1]
            on_press: period_carousel.load_previous()
         MDCarousel:
            id: period_carousel
            loop: True
            md_bg_color: [0.1,0.1,0.1,1]
            on_slide_complete: root.ids['selection_list'].load_items_in_time_period()
            MDLabel:
               halign: "center"
               md_bg_color: [0.1,0.1,0.1,1]
               text: "Weekly"
               font_style: "Subtitle1"
            MDLabel:
               halign: "center"
               md_bg_color: [0.1,0.1,0.1,1]
               text: "Fortnight"
               font_style: "Subtitle1"
            MDLabel:
               halign: "center"
               md_bg_color: [0.1,0.1,0.1,1]
               text: "Monthly"
               font_style: "Subtitle1"
            MDLabel:
               halign: "center"
               md_bg_color: [0.1,0.1,0.1,1]
               text: "Quarterly"
               font_style: "Subtitle1"
         MDIconButton:
            icon: "menu-right"
            md_bg_color: [0.1,0.1,0.1,1]
            on_press: period_carousel.load_next()
      ViewRecordRecycleView:
         id: selection_list

         
<ExpenseListItem>:
   text: "Amount goes here"
   secondary_text: "Description and Tags"
   default_size: None, dp(56)
   IconLeftWidget:
      icon: "minus-thick"

<IncomeListItem>:
   text: "Amount goes here"
   secondary_text: "Description and Tags"
   IconLeftWidget:
      icon: "plus-thick"

<ViewRecordRecycleView>:
   viewclass: 'SelectableListItem'  # defines the viewtype for the data items.
   orientation: "vertical"
   spacing: 40
   padding:20, 20
   space_x: self.size[0]/3
   SelectableRecycleBoxLayout:
      color:(0, 0.7, 0.4, 0.8)
      default_size: None, dp(56)

      # defines the size of the widget in reference to width and height
      default_size_hint: 1.0, None 
      size_hint_y: None
      height: self.minimum_height
      orientation: 'vertical' # defines the orientation of data items
