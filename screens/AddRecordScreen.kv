<AddRecordScreen>:
###############################################################################
#  Add Record Screen
###############################################################################
   id: AddRecordScreen
   name: "AddRecordMenu"
   MDBoxLayout:
      orientation: 'vertical'
      padding: "20dp"
      # md_bg_color: app.theme_cls.primary_color
      TransactionFormWidget:
         id: transaction_form
      Widget:
   MDAnchorLayout:
      anchor_x: 'right'
      anchor_y: 'bottom'
      padding: '20dp'
      MDFillRoundFlatIconButton:
         text: "Add Record"
         icon: "plus-thick"
         on_release:
            root.process_expense_inputs()
            app.update_list_screen()

