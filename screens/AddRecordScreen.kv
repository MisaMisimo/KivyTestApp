#:kivy 2.1.0
#:import MDFloatTextField custom_widgets.MDFloatTextField
#: import TransactionFormWidget custom_widgets.TransactionFormWidget
<AddRecordScreen>:
###############################################################################
#  Add Record Screen
###############################################################################
   id: AddRecordScreen
   name: "AddRecordMenu"
   MDBoxLayout:
      orientation: 'vertical'
      padding: "20dp"
      # md_bg_color: app.theme_cls.primary_color
      MDBoxLayout:
         orientation: 'vertical'
         adaptive_height: True
         MDAnchorLayout:
            anchor_x: 'left'
            anchor_y: 'center'
            MDLabel:
               adaptive_height: True
               text: "Add Expense"
               halign: 'left'
               # md_bg_color: "red"
      TransactionFormWidget:
         id: transaction_form
      Widget:
   MDAnchorLayout:
      anchor_x: 'right'
      anchor_y: 'bottom'
      padding: '20dp'
      MDFillRoundFlatIconButton:
         text: "Add Record"
         icon: "plus-thick"
         on_release:
            root.process_expense_inputs()
            app.update_list_screen()

